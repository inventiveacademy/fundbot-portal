extends layout

block content
  .main.container.row
    .col-md-6.col-md-offset-3
      h1.display-4.m-b-2 Sign Up
      p Applying will certainly affect your credit score
      // register form
      form#superForm(method='POST' action='/register')
        div.form-group
          label(for='firstname') First Name:
          input#firstname.form-control(type='text', placeholder='First name here!' name='firstname')
        div.form-group
          label(for='middlename') Middle Name:
          input#middlename.form-control(type='text', placeholder='Middle name here!' name='middlename')
        div.form-group
          label(for='lastname') Last Name:
          input#lastname.form-control(type='text', placeholder='Last name here!' name='lastname')
        div.form-group
          label(for='contactphone') Contact Phone:
          input#contactphone.form-control(type='text', placeholder='Contact phone here' name='contactphone')
        div.form-group
          label(for='email') Email:
          input#email.form-control(type='email', placeholder='name@email.com' name='email')
        div.form-group
          label(for='address') Address (number and street)
          input#address.form-control(type='text', placeholder='Your Address' name='address')
        div.form-group
          label(for='zip') Zip Code:
          input#zip.form-control(type='text', placeholder='Zip Code' name='zip')
        div.form-group
          label(for='city') City
          input#city.form-control(type='text', placeholder='City' name='city')
        div.form-group
          label(for='state') State:
          input#state.form-control(type='text', placeholder='Your state' name='state')
        div.form-group
          label(for='pw') Password:
          input#pw.form-control(type='password' name='password')
        div.form-group
          label(for='pw2') Confirm Password:
          input#pw2.form-control(type='password' name='confirmpassword')
      
        button.btn.btn-primary(type='submit') Sign up
