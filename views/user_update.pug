extends layout

block content
 .updateUser
     .formContainer
         .UserFormHeader
             h3 Update #{applications.firstname}
         .UserForm
             form#form
               .formInput
                 input#input(type='text' class='firstname', placeholder='First Name', name='First Name' )
               .formInput
                 input#input(type='text' class='lastname' placeholder='Last Name' name='Last Name')
               .formInput
                 input#input(type='text' class='email' placeholder='Email' name='email')

               button.UserUbtn(href="/applicant_update" type='submit') Update
