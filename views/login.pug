include includes/head.pug
div.login-wrapper
  div.main
    div.main-overlay  
      header#login-header
        div.logo
          img.bot-logo(src="../images/robot-icon-white.svg")
          h1 FUNDBOT
        ul
          li.login-btn-header
            a(href="Login") Login
          li.sign-up-btn-header
            a(href="Login") Sign Up
      div.form-container
            h1 Change your life, get funded.
            form(action='/Profile_Management')
              div
                input.login-input(type='text' id='email' placeholder='email' name='email')
              div
                input.login-input(type='password' id='password' placeholder='password' name='password')
              div    
                  input.login-input(type='text' id="confirm_password" placeholder='confirm password')  
              button.login-btn-main(type='submit') Update

  include includes/footer.pug
